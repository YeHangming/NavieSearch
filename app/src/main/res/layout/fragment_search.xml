<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <!--    //TODO: complete automatic text input`s width to fixed-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/ic_component_style_rounded_border"


        >


        <!--            android:layout_width="195dp"-->
        <!--            android:layout_height="47dp"-->
        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="29dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_component_style_rounded_border"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_component_style_rounded_border" />

        <EditText
            android:id="@+id/key_word_TextView"
            android:layout_width="wrap_content"
            android:imeOptions="actionSearch"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="search"
            android:textColor="@color/textPrimary"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textAlignment="viewStart"
            tools:ignore="RtlCompat" />

        <ImageButton
            android:id="@+id/search_imageButton"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/ic_component_style_rounded_border"
            app:srcCompat="@drawable/ic_baseline_search_24" />

    </LinearLayout>

</FrameLayout>